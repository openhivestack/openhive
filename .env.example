# Database Configuration
# Connect to your PostgreSQL database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/openhive"

# Authentication (Better Auth)
# Generate a secret using `openssl rand -hex 32` or similar
BETTER_AUTH_SECRET=
BETTER_AUTH_URL="http://localhost:3000"
TRUSTED_ORIGINS="http://localhost:3000"

# Root Seeding Configuration
# These values are used by `npx prisma db seed` to create the initial admin user and organization
ROOT_ORG_SLUG="org_main_root"
ROOT_ORG_ID="org_main_root"
ROOT_ORG_NAME="org_main_root"
ROOT_USER_EMAIL="admin@example.com"
ROOT_USER_NAME="root"
ROOT_USER_ID="user_root_admin"
ROOT_USER_ROLE="admin"
ROOT_MEMBER_ROLE="owner"
ROOT_USER_PASSWORD="password123" # Required for local seeding

# Public App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# GitHub OAuth (Optional)
# Required if you want to enable GitHub Login
GH_CLIENT_ID=
GH_CLIENT_SECRET=

# Cloud Infrastructure (Optional - for deployment features)
# defaults to "aws" if not set. Options: "aws", "k8s"
# CLOUD_PROVIDER="aws"

